<div class="row">
  <div class="col-lg-12">
    <h4 class="page-header">Asignaciónes</h4>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-2">
            Tabla de Asignaciones
          </div>
          <div class="col-lg-10 text-right">
            <%= link_to 'Nueva asignación', new_assignation_path %>
          </div>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Id</th>
              <th>Naviera</th>
              <th>Shipment</th>
              <th>Cantidad</th>
              <th>Contenedor</th>
              <th>Ruta</th>
              <th>Pendiente</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @assignations.each do |assignation| %>
                <tr <%= invoice_status_assignation assignation %>>
                  <td><%= assignation.id %></td>
                  <td><%= assignation.get_navy_name %></td>
                  <td><%= assignation.get_shipment %></td>
                  <td><%= assignation.get_quantity %></td>
                  <td><%= assignation.get_container_name %></td>
                  <td><%= assignation.get_way_name %></td>
                  <td><%= assignation.get_Remaining %></td>
                  <td><%= link_to 'ver', assignation %></td>
                  <td><%= link_to 'Editar', edit_assignation_path(assignation) %></td>
                  <td><%= link_to 'Eliminar', assignation, method: :delete, data: { confirm: '¿Esta seguro?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

