<h2>Listado de navieras</h2>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-6">
            Navieras
          </div>
          <div class="col-lg-6 text-right">
            <%= link_to 'Nueva naviera', new_navy_path %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @navies.each do |navy| %>
                  <tr>
                    <td><%= navy.get_name_navy %></td>
                    <td><%= link_to 'Ver', navy %></td>
                    <td><%= link_to 'Editar', edit_navy_path(navy) %></td>
                    <td><%= link_to 'Eliminar', navy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

