<h1>Facturaci√≥n</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-lg-2">
              Facturas
            </div>
            <div class="col-lg-10 text-right">
              <%= link_to 'Nueva Factura', new_invoice_path %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Naviera</th>
                  <th>No factura</th>
                  <th>Shipment</th>
                  <th>workorder</th>
                  <th>Total</th>
                  <th>subtotal</th>
                  <th>Expirationdate</th>
                  <th>Elaborationdate</th>
                  <th>Eradicatedate</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @invoices.each do |invoice| %>
                  <tr>
                    <td><%= invoice.get_assig_navy_name_invoice %></td>
                    <td><%= invoice.get_idcontable_invoice%></td>
                    <td><%= invoice.get_assig_shipment_invoice %></td>
                    <td><%= invoice.workorder %></td>
                    <td><%= invoice.total %></td>
                    <td><%= invoice.subtotal %></td>
                    <td><%= invoice.expirationDate %></td>
                    <td><%= invoice.elaborationDate %></td>
                    <td><%= invoice.eradicateDate %></td>
                    <td><%= link_to 'Show', invoice %></td>
                    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
                    <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>

