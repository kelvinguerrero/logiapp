<h2>Listar movimientos</h2>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
            <div class="col-lg-6">
                Movimientos
            </div>
            <div class="col-lg-6 text-right">
              <%= link_to 'Nuevo movimiento', new_movement_path %>
            </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th># consecutivo</th>
              <th>Fecha</th>
              <th>Valor</th>
              <th>Concepto</th>
              <th>Cuenta</th>
              <th>Tipo</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @movements.each do |movement| %>
              <tr>
                <td><%= movement.get_consecutive_number %></td>
                <td><%= movement.get_movement_date %></td>
                <td><%= number_to_currency(movement.get_value_number) %></td>
                <td><%= movement.get_concept %></td>
                <td><%= movement.get_logi_bill %></td>
                <td><%= movement.get_type_transaction %></td>
                <td><%= link_to 'Ver', movement %></td>
                <td><%= link_to 'Editar', edit_movement_path(movement) %></td>
                <td><%= link_to 'Eliminar', movement, method: :delete, data: { confirm: 'Â¿Quiere eliminar el moviento?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>