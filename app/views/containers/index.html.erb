<h2>Listado de contenedores</h2>

<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-2">
            Contenedores
          </div>
          <div class="col-lg-10 text-right">
            <%= link_to 'Nuevo Contenedor', new_container_path %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @containers.each do |container| %>
                  <tr>
                    <td><%= container.get_name_container %></td>
                    <td><%= link_to 'Show', container %></td>
                    <td><%= link_to 'Edit', edit_container_path(container) %></td>
                    <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
