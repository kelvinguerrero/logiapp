<h1>Listado de despachos</h1>
<div class="row">
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-lg-2">
            Despacho
        </div>
        <div class="col-lg-10 text-right">
          <%= link_to 'Nuevo despacho', new_dispatch_path %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Id </th>
                  <th>Shipment</th>
                  <th>Tipo de cont</th>
                  <th>Fecha de cargue</th>
                  <th>Conductor</th>
                  <th>Placa de carro</th>
                  <th>Cedula</th>
                  <th># de cont</th>
                  <th># Orden cargue</th>
                  <th># Orden manifiesto</th>
                  <th>Saldo</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @dispatches.each do |dispatch| %>
                  <tr <%= status_assignation dispatch %>>
                    <td><a href="<%= dispatch_path dispatch %>" style="display: block" class="text-center"> <%= dispatch.id %> </a></td>
                    <td><%= dispatch.get_assignation_shipment%></td>
                    <td><%= dispatch.get_container_name%></td>
                    <td><%= dispatch.get_cargue_date %></td>
                    <td><%= dispatch.get_driver_name %></td>
                    <td><%= dispatch.get_car_plate %></td>
                    <td><%= dispatch.get_driver_document %></td>
                    <td><%= dispatch.get_container_number %></td>
                    <td><%= dispatch.loadOrder %></td>
                    <td><%= dispatch.get_manifest_number%></td>
                    <td><%= dispatch.get_balance %></td>

                    <td><%= link_to 'Editar', edit_dispatch_path(dispatch) %></td>
                  </tr>
                <% end %>
              </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>
<br>


