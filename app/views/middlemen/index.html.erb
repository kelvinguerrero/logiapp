<h2>Listado de los comisionistas</h2>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
            <div class="col-lg-4">
                Comisionistas
            </div>
            <div class="col-lg-8 text-right">
                <%= link_to 'Nuevo comisionista', new_middleman_path %>
            </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Costo</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @middlemen.each do |middleman| %>
                  <tr>
                    <td><%= number_to_currency middleman.get_price_middleman_entero %></td>
                    <td><%= middleman.get_name_middleman %></td>
                    <td><%= link_to 'Show', middleman %></td>
                    <td><%= link_to 'Edit', edit_middleman_path(middleman) %></td>
                    <td><%= link_to 'Destroy', middleman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>

