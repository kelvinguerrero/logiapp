<%= form_for(@middleman) do |f| %>
  <% if @middleman.errors.any? %>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <%= pluralize(@middleman.errors.count, "error") %> prohibe crear esta intermediario:
        </div>
        <div class="panel-body">
          <ul>
            <% @middleman.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
  <% end %>

    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Comisionista
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                    <%= f.label 'Nombre' %><br>
                    <%= f.text_field :name, :class => 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label 'Valor' %><br>
                    <%= f.text_field :price, :class => 'form-control' %>
                </div>
                </div>
              </div>
            </div>
            <div class="panel-footer">
              <%= f.submit 'Crear comisionita', :class => 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      </div>

<% end %>
