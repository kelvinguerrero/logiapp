<%= form_for(@box) do |f| %>
  <% if @box.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@box.errors.count, "error") %> prohibe que esta caja menor sea creada:
      </div>
      <div class="panel-body">
        <ul>
          <% @box.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </div>
  <div class="field">
    <%= f.label :incomeDate %><br>
    <%= f.date_select :incomeDate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
