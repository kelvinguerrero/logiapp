<h1>Caja negra</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-4">
            Caja negra
          </div>
          <div class="col-lg-8 text-right">
            <%= link_to 'Nuevo movimiento de caja', new_box_path %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">

              <thead>
                <tr>
                  <th>Tipo</th>
                  <th>Value</th>
                  <th>Total</th>
                  <th>Incomedate</th>
                  <th>Tipo Transacci√≥n</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @boxes.each do |box| %>
                  <tr>
                    <td><%= box.get_name_box %></td>
                    <td><%= number_to_currency(box.get_value_box_number) %></td>
                    <td><%= number_to_currency(box.get_total_box_number) %></td>
                    <td><%= box.get_incomeDate_box %></td>
                    <td><%= box.get_author_transaction %></td>
                    <td><%= link_to 'Ver', box %></td>
                    <td><%= link_to 'Editar', edit_box_path(box) %></td>
                    <td><%= link_to 'Eliminar', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>