<h2>Listado de carros</h2>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-4">
              Tabla de carros
          </div>
          <div class="col-lg-8 text-right">
            <%= link_to 'Nuevo Carro', new_car_path %>
          </div>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Plate</th>
                  <th>Model</th>
                  <th>Color</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @cars.each do |car| %>
                  <tr>
                    <td><%= car.get_plate_car %></td>
                    <td><%= car.get_model_car %></td>
                    <td><%= car.get_color_car %></td>
                    <td><%= link_to 'Show', car %></td>
                    <td><%= link_to 'Edit', edit_car_path(car) %></td>
                    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>


