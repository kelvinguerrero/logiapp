<h1> Flujos de anticipos y saldos</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Flujos de anticipos y saldos
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">

            <thead>
              <tr>
                <th>Value</th>
                <th>Flowdate</th>
                <th>Concept</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @outflows.each do |outflow| %>
                <tr>
                  <td><%= number_to_currency(outflow.get_value_navy_number_outflow) %></td>
                  <td><%= outflow.get_flow_date_outflow %></td>
                  <td><%= outflow.get_concept_outflow %></td>
                  <td><%= link_to 'Show', outflow %></td>
                  <td><%= link_to 'Edit', edit_outflow_path(outflow) %></td>
                  <td><%= link_to 'Destroy', outflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Outflow', new_outflow_path %>
