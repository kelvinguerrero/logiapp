<h1>Listado de parametros</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
            <div class="col-lg-8">
                Parametros generales de la plataforma
            </div>
            <div class="col-lg-4 text-right">
                <%= link_to 'Nuevo parametro', new_parameter_path %>
            </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Value</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @parameters.each do |parameter| %>
                  <tr>
                    <td><%= parameter.get_name_parameter %></td>
                    <td><%= parameter.get_value_parameter %></td>
                    <td><%= link_to 'Ver', parameter %></td>
                    <td><%= link_to 'Editar', edit_parameter_path(parameter) %></td>
                    <td><%= link_to 'Eliminar', parameter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

